{
  "name": "alquemie/pantheon",
  "type": "website",
  "description": "",
  "homepage": "https://github.com/Alquemie/",
  "license": "GPL-3.0",
  "authors": [
    {
      "name": "Alquemie",
      "email": "support@alquemie.net"
    },
    {
      "name": "Chris Carrel",
      "email": "chris@alquemie.net"
    }
  ],
  "minimum-stability": "stable",
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "composer/installers": "^1.3.0",
    "johnpbloch/wordpress": "4.9.6",
    "pantheon-systems/quicksilver-pushback": "^1.0",
    "psy/psysh" : "~0.6",
    "roots/wp-password-bcrypt": "~1.0.0",
    "rvtraveller/qs-composer-installer": "^1.1",
    "wp-cli/wp-cli" : "~0.24",
    "wpackagist-plugin/pantheon-advanced-page-cache":"0.3.0",
    "wpackagist-plugin/wp-native-php-sessions": "0.6.8",
    "wpackagist-plugin/wp-security-audit-log": "3.1.6",
    "wpackagist-theme/twentyseventeen": "~1.6"
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "paulgibbs/behat-wordpress-extension": "0.8.0",
    "behat/mink-goutte-driver": "^1.2",
    "behat/mink-selenium2-driver": "^1.3",
    "squizlabs/php_codesniffer": "^2.9.0",
    "wp-coding-standards/wpcs": "dev-master",
    "phpunit/phpunit": "7.1.5",
    "brain/monkey": "^1.4"
  },
  "config": {
    "vendor-dir": "vendor",
    "preferred-install": "dist",
    "optimize-autoloader": true,
    "sort-packages": true,
    "platform": {
      "php": "7.1"
    }
  },
  "extra": {
    "wordpress-install-dir": "web/cms",
    "build-env": {
      "install-cms": [
        "wp core install --title={site-name} --url={site-url} --admin_user={account-name} --admin_email={account-mail} --admin_password={account-pass}",
        "wp option update permalink_structure '/%postname%/'"
      ]
    },
    "installer-paths": {
      "web/app/mu-plugins/pantheon-advanced-page-cache/": ["wpackagist-plugin/pantheon-advanced-page-cache"],
      "web/app/mu-plugins/wp-password-bcrypt/": ["roots/wp-password-bcrypt"],
      "web/app/mu-plugins/wp-native-php-sessions/": ["wpackagist-plugin/wp-native-php-sessions"],
      "web/app/mu-plugins/wp-security-audit-log/": ["wpackagist-plugin/wp-security-audit-log"],
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"],
      "web/private/scripts/quicksilver/{$name}/": ["type:quicksilver-script"]
    }
  }
}
