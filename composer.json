{
  "name": "alquemie/pantheon",
  "type": "website",
  "description": "",
  "homepage": "https://github.com/Alquemie/",
  "license": "GPL-3.0",
  "authors": [
    {
      "name": "Alquemie",
      "email": "support@alquemie.net"
    },
    {
      "name": "Chris Carrel",
      "email": "chris@alquemie.net"
    }
  ],
  "minimum-stability": "stable",
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "vcs",
      "url": "https://bitbucket.org/alquemie/gravityforms"
    },
    {
      "type": "vcs",
      "url": "https://github.com/Alquemie/gf-formname"
    },
    {
      "type": "vcs",
      "url": "https://github.com/Alquemie/alquemie-config"
    }
  ],
  "require": {
    "composer/installers": "^1.3.0",
    "johnpbloch/wordpress": "5.0.3",
    "pantheon-systems/quicksilver-pushback": "^1.0",
    "psy/psysh" : "~0.6",
    "roots/wp-password-bcrypt": "~1.0.0",
    "rvtraveller/qs-composer-installer": "^1.1",
    "wp-cli/wp-cli" : "~0.24",
    "alquemie/gravityforms": "2.4.5",
    "alquemie/gf-formname": "0.2.0",
    "alquemie/alquemie-config": "0.1.2",
    "wpackagist-plugin/pantheon-advanced-page-cache":"0.3.0",
    "wpackagist-plugin/stream":"3.2.3",
    "wpackagist-plugin/wp-mail-smtp":"1.4.1",
    "wpackagist-plugin/wp-native-php-sessions": "0.6.9",
    "wpackagist-theme/twentynineteen":"1.2" 
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "paulgibbs/behat-wordpress-extension": "0.8.0",
    "behat/mink-goutte-driver": "^1.2",
    "behat/mink-selenium2-driver": "^1.3",
    "squizlabs/php_codesniffer": "^3.4.0",
    "wp-coding-standards/wpcs": "dev-master",
    "phpunit/phpunit": "7.1.5",
    "brain/monkey": "^1.4"
  },
  "config": {
    "vendor-dir": "vendor",
    "preferred-install": "dist",
    "optimize-autoloader": true,
    "sort-packages": true,
    "platform": {
      "php": "7.2"
    }
  },
  "extra": {
    "wordpress-install-dir": "web/cms",
    "installer-paths": {
      "web/app/mu-plugins/pantheon-advanced-page-cache/": ["wpackagist-plugin/pantheon-advanced-page-cache"],
      "web/app/mu-plugins/wp-password-bcrypt/": ["roots/wp-password-bcrypt"],
      "web/app/mu-plugins/wp-native-php-sessions/": ["wpackagist-plugin/wp-native-php-sessions"],
      "web/app/mu-plugins/wp-redis/": ["wpackagist-plugin/wp-redis"],
      "web/app/mu-plugins/stream/": ["wpackagist-plugin/stream"],
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"],
      "web/private/scripts/quicksilver/{$name}/": ["type:quicksilver-script"]
    }
  }
}
